<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/person"
                android:text="个人"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_height="45dp" />
            <View
                android:id="@+id/person_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/action_blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:text="公司"
                android:layout_height="45dp" />
            <View
                android:id="@+id/company_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="gone"
                android:background="@color/action_blue"/>


        </LinearLayout>


    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />


    <LinearLayout
        android:id="@+id/layout_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_send_address"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送货地址"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

        <RelativeLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/txt_phone"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:id="@+id/iconRight"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_company"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_cp_send_address"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送货地址"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_cp_address"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

        <RelativeLayout
            android:id="@+id/layout_cp_name"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_cp_name"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

        <RelativeLayout
            android:id="@+id/layout_cp_phone"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/txt_cp_phone"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

        <RelativeLayout
            android:id="@+id/layout_sp_name"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/txt_sp_name"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />
        <RelativeLayout
            android:id="@+id/layout_sp_address"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:padding="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司地址"
                android:textSize="18sp"
                android:textColor="#555"
                android:layout_centerVertical="true"
                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/txt_sp_address"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/ic_list_right_arr"
                    android:layout_alignParentRight="true"
                    android:layout_height="20dp"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
