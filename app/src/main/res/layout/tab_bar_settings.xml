<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:theme="@style/AppThemeNoActionbar"
    android:layout_height="fill_parent"
    android:orientation="vertical"
   >

    <include layout="@layout/divide_15_top_bottom" />

    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:padding="14dp"
        android:layout_height="wrap_content">



        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="18sp"
            android:textColor="#555"
            android:id="@+id/person_info"
            android:layout_centerVertical="true"
            />

        <LinearLayout android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>

            <ImageView android:layout_width="20dp"
                android:src="@mipmap/ic_list_right_arr"
                android:layout_alignParentRight="true"
                android:layout_height="20dp"/>

        </LinearLayout>


    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:padding="14dp"
        android:id="@+id/layout_about"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于91精装"
            android:textSize="18sp"
            android:textColor="#555"

            android:layout_centerVertical="true"
            />

        <LinearLayout android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>

            <ImageView android:layout_width="20dp"
                android:src="@mipmap/ic_list_right_arr"
                android:layout_alignParentRight="true"
                android:layout_height="20dp"/>

        </LinearLayout>


    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:padding="14dp"
        android:id="@+id/layout_version"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textSize="18sp"
            android:textColor="#555"

            android:layout_centerVertical="true"
            />

        <LinearLayout android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>

            <ImageView android:layout_width="20dp"
                android:src="@mipmap/ic_list_right_arr"
                android:layout_alignParentRight="true"
                android:layout_height="20dp"/>

        </LinearLayout>


    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@mipmap/divide_15_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:padding="14dp"
        android:id="@+id/layout_feedback"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="18sp"
            android:textColor="#555"

            android:layout_centerVertical="true"
            />

        <LinearLayout android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>

            <ImageView android:layout_width="20dp"
                android:src="@mipmap/ic_list_right_arr"
                android:layout_alignParentRight="true"
                android:layout_height="20dp"/>

        </LinearLayout>


    </RelativeLayout>

    <include layout="@layout/divide_15_top_bottom" />
    <RelativeLayout
        android:id="@+id/layout_quit"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:padding="14dp"
        android:layout_height="wrap_content">



        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textSize="18sp"
            android:textColor="#555"
            android:id="@+id/title"
            android:layout_centerVertical="true"
            />

        <LinearLayout android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>

            <ImageView android:layout_width="20dp"
                android:src="@mipmap/ic_list_right_arr"
                android:layout_alignParentRight="true"
                android:layout_height="20dp"/>

        </LinearLayout>


    </RelativeLayout>
    <include layout="@layout/divide_15_top_bottom" />


</LinearLayout>
