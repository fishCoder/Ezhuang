<resources>
    <!-- 背景设为透明，用于启动和登录页面-->
    <!--<style name="TranslateThemeFull" parent="android:style/Theme.Holo.Light.NoActionBar">-->
    <style name="TranslateThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TranslateTheme" parent="ActionbarNoIcon">
        <item name="android:windowBackground">@drawable/transparent</item>
    </style>

    <!--透明的actionbar-->

    <style name="TranslateActionbar" parent="Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="color">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
    </style>

    <style name="MyApp.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:popupMenuStyle">@style/PopupMenu.ListPopupWindow</item>
        <item name="android:windowBackground">@color/stand_bg</item>
        <item name="android:alertDialogTheme">@style/ThemeHoloLightDialogAlert</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MyPopupMenu.Large</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/MyPopupMenu.Small</item>
        <item name="android:actionModeBackground">@drawable/gray_drawable</item>
        <item name="android:actionModeCloseDrawable">@mipmap/task_add_cab_back</item>
        <item name="android:windowActionModeOverlay">true</item>

        <!--<item name="android:background">@drawable/gray_drawable</item>-->

        <item name="colorPrimary">@drawable/gray_drawable</item>
        <!--<item name="android:textColorPrimary">@drawable/</item>-->
        <!--<item name="colorPrimaryDark">@color/material_blue_700</item>-->
        <!--<item name="colorAccent">@color/material_green_A200</item>-->

        <!--<item name="numberPickerStyle">@style/WidgetHoloNumberPicker</item>-->
    </style>

    <style name="AppThemeNoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:popupMenuStyle">@style/PopupMenu.ListPopupWindow</item>
        <item name="android:windowBackground">@color/stand_bg</item>
        <item name="android:alertDialogTheme">@style/ThemeHoloLightDialogAlert</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MyPopupMenu.Large</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/MyPopupMenu.Small</item>
        <item name="android:actionModeBackground">@drawable/gray_drawable</item>
        <item name="android:actionModeCloseDrawable">@mipmap/task_add_cab_back</item>

        <item name="android:actionDropDownStyle">@style/MyGreenSpinner</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDropDownListView</item>

        <!--<item name="android:background">@drawable/gray_drawable</item>-->

        <item name="colorPrimary">@drawable/gray_drawable</item>
        <item name="colorPrimaryDark">@color/black</item>
        <!--<item name="android:textColorPrimary">@drawable/</item>-->
        <!--<item name="colorPrimaryDark">@color/material_blue_700</item>-->
        <!--<item name="colorAccent">@color/material_green_A200</item>-->

        <!--<item name="numberPickerStyle">@style/WidgetHoloNumberPicker</item>-->
    </style>

    <!--<style name="MyGreenSpinner" parent="android:style/Widget.Holo.Light.Spinner">-->
    <style name="MyGreenSpinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:background">@drawable/spinner_layout_head_bg</item>
    </style>

    <style name="SpinnerDropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/spinner_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ActionbarSpannerTheme" parent="AppTheme">
        <item name="android:actionDropDownStyle">@style/MyGreenSpinner</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDropDownListView</item>

    </style>

    <style name="ActionbarSpannerNoIconTheme" parent="ActionbarSpannerTheme">
        <!--<item name="android:actionBarStyle">@style/ActionBarStyle</item>-->
    </style>

    <!-- ActionBar styles -->

    <!--<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">--><!--<item name="android:background">@drawable/gray_drawable</item>--><!--<item name="background">@drawable/gray_drawable</item>--><!--</style>-->


